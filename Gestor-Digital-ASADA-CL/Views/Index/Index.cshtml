@{
    ViewData["Title"] = "Inicio sesión";
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
}

<form class="container form__login needs-validation" method="post" asp-controller="Index" asp-action="IniciarSesion" novalidate>
    <div class="container mb-2">
        <h2 class="mt-3 text-center">Inicio de sesión</h2>
    </div>
    <div class="container mt-2">
        <label class="mb-2">Nombre de usuario</label>
        <input id="inNombreUsuario" class="form-control" placeholder="Ingrese su nombre de usuario"  @*asp-for="userName"*@>
        @*<span class="field-validation-error" asp-validation-for="IdCard"></span>*@
    </div>
    <div class="container mt-2">
        <label class="mb-2">Contraseña</label>
        <input id="inContraseña" type="password" class="form-control" placeholder="Ingrese su contraseña" @*asp-for="Password"*@>
        @*<span class="field-validation-error" asp-validation-for="Password"></span>*@
    </div>
    <div class="container d-flex justify-content-center my-3">
        <button id="btnIniciarSesion" type="submit" class="btn btn-dark">Iniciar Sesión</button>
    </div>
</form>

