<div class="modal fade" id="searchModal" tabindex="-1" aria-labelledby="searchModal" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Busqueda de recaudaciones diarias</h5>
            </div>
            <form class="was-validated" method="post" asp-controller="User" asp-action="Details">
                <div class="modal-body">
                    <div class="container">
                        <div class="mb-3">
                            <label for="inputName" class="form-label">Fecha inicial</label>
                            <input id="inputName" class="form-control is-invalid" type="date" asp-for="Date" required>
                            <span class="field-validation-error" asp-validation-for="Date"></span>
                        </div>
                        <div class="mb-3">
                            <label for="inputName" class="form-label">Fecha final</label>
                            <input id="inputName" class="form-control is-invalid" type="date" asp-for="Date" required>
                            <span class="field-validation-error" asp-validation-for="Date"></span>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                    <button id="btn-search" type="submit" class="btn btn-primary">Buscar</button>
                </div>
            </form>
        </div>
    </div>
</div>
<div class="modal fade" id="editModal" tabindex="-1" aria-labelledby="editModal" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Modificación de información de recaudación diaria</h5>
            </div>
            <form class="row g-3 p-3 was-validated" method="post" asp-controller="DailyCollection" asp-action="Edit">
                <div class="col-md-4">
                    <label for="inputHydrant" class="form-label">Hidrantes</label>
                    <input id="inputHydrant" class="form-control" type="number" placeholder="Cantidad de hidrantes" asp-for="Hydrant" required>
                    <span class="field-validation-error" asp-validation-for="Hydrant"></span>
                </div>
                <div class="col-md-4">
                    <label for="inputInvoice" class="form-label">Recibos</label>
                    <input id="inputInvoice" class="form-control" type="number" placeholder="Cantidad de recibos" asp-for="Invoce" required>
                    <span class="field-validation-error" asp-validation-for="Invoce"></span>
                </div>
                <div class="col-md-4">
                    <label for="inputTax" class="form-label">Impuesto al Valor Agregado (IVA)</label>
                    <input id="inputTax" class="form-control" type="number" min="0" step=".01" placeholder="Cantidad de IVA" asp-for="Tax" required>
                    <span class="field-validation-error" asp-validation-for="Tax"></span>
                </div>
                <div class="col-12">
                    <label for="inputCash" class="form-label">Efectivo</label>
                    <input id="inputCash" class="form-control" type="number" min="0" step=".01" placeholder="Cantidad de efectivo" asp-for="Cash" required>
                    <span class="field-validation-error" asp-validation-for="Cash"></span>
                </div>
                <div class="col-12">
                    <label for="inputTotal" class="form-label">Total</label>
                    <input id="inputTotal" class="form-control" type="number" min="0" step=".01" placeholder="Total recaudado" asp-for="Total" required>
                    <span class="field-validation-error" asp-validation-for="Total"></span>
                </div>
                <div class="col-12">
                    <label for="inputDate" class="form-label">Fecha de recaudación</label>
                    <input id="inputDate" class="form-control" type="date" asp-for="Date" required />
                    <span class="field-validation-error" asp-validation-for="Date"></span>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button id="btn-search" type="submit" class="btn btn-primary">Actualizar</button>
                </div>
            </form>
        </div>
    </div>
</div>
<div class="modal fade" id="addModal" tabindex="-1" aria-labelledby="addModal" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Registrar recaudación diaria</h5>
            </div>
            <form class="row g-3 p-3 was-validated" method="post" asp-controller="DailyCollection" asp-action="Create">
                <div class="col-md-4">
                    <label for="inputHydrant" class="form-label">Hidrantes</label>
                    <input id="inputHydrant" class="form-control" type="number" placeholder="Cantidad de hidrantes" asp-for="Hydrant" required>
                    <span class="field-validation-error" asp-validation-for="Hydrant"></span>
                </div>
                <div class="col-md-4">
                    <label for="inputInvoice" class="form-label">Recibos</label>
                    <input id="inputInvoice" class="form-control" type="number" placeholder="Cantidad de recibos" asp-for="Invoce" required>
                    <span class="field-validation-error" asp-validation-for="Invoce"></span>
                </div>
                <div class="col-md-4">
                    <label for="inputTax" class="form-label">Impuesto al Valor Agregado (IVA)</label>
                    <input id="inputTax" class="form-control" type="number" min="0" step=".01" placeholder="Cantidad de IVA" asp-for="Tax" required>
                    <span class="field-validation-error" asp-validation-for="Tax"></span>
                </div>
                <div class="col-12">
                    <label for="inputCash" class="form-label">Efectivo</label>
                    <input id="inputCash" class="form-control" type="number" min="0" step=".01" placeholder="Cantidad de efectivo" asp-for="Cash" required>
                    <span class="field-validation-error" asp-validation-for="Cash"></span>
                </div>
                <div class="col-12">
                    <label for="inputTotal" class="form-label">Total</label>
                    <input id="inputTotal" class="form-control" type="number" min="0" step=".01" placeholder="Total recaudado" asp-for="Total" required>
                    <span class="field-validation-error" asp-validation-for="Total"></span>
                </div>
                <div class="col-12">
                    <label for="inputDate" class="form-label">Fecha de recaudación</label>
                    <input id="inputDate" class="form-control" type="date" asp-for="Date" required />
                    <span class="field-validation-error" asp-validation-for="Date"></span>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button id="btn-search" type="submit" class="btn btn-primary">Registrar</button>
                </div>
            </form>
        </div>
    </div>
</div>

