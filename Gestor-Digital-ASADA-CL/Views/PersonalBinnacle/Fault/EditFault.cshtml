<div class="modal fade" id="searchModal" tabindex="-1" aria-labelledby="searchModal" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Búsqueda de avería</h5>
            </div>
            <form class="needs-validation" novalidate>
                <div class="modal-body">
                    <div class="container">
                     <div class="mb-3">
                            <label for="selectSector" class="form-label" >Sector</label>
                            <select class="form-select" aria-label="Sectores" required>
                                <option value="">Seleccione el sector</option>
                                <option value="1">Comejen</option>
                                <option value="2">Aceras anchas</option>
                                <option value="3">Viga</option>
                                <option value="4">Antigua delegación</option>
                                <option value="5">Centro</option>
                                <option value="6">Laureles</option>
                            </select>
                            <div class="invalid-feedback">
                                Debe seleccionar un sector 
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                    <button id="btn-search" type="submit" class="btn btn-primary">Buscar</button>
                </div>
            </form>
        </div>
    </div>
</div>
<div class="modal fade" id="editModal" tabindex="-1" aria-labelledby="editModal" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Modificación de avería</h5>
            </div>
            <form class="row g-3 p-3 needs-validation" novalidate>
                <div class="col-md-4">
                    <label for="inputName" class="form-label">Nombre del cliente</label>
                    <input id="inputName" class="form-control" type="text" placeholder="Nombre del cliente" required>
                    <div class="invalid-feedback">
                        Ingrese nombre del cliente
                    </div>
                </div>
                <div class="col-md-4">
                    <label for="inputIdHouse" class="form-label">Número de casa</label>
                    <input id="inputIdHouse" class="form-control" type="number" placeholder="Número de casa" required>
                    <div class="invalid-feedback">
                        Ingrese número de casa
                    </div>

                </div>
                <div class="col-md-4">
                    <label for="inputNameT" class="form-label">Nombre del trabajador</label>
                    <input id="inputNameT" class="form-control" type="text" placeholder="Nombre del trabajador" required>
                    <div class="invalid-feedback">
                        Ingrese nombre del trabajador
                    </div>

                </div>
                <div class="col-4">
                    <label for="inputDateR" class="form-label">Fecha de reporte</label>
                    <input id="inputDateR" class="form-control" type="date" required>
                    <div class="invalid-feedback">
                        Ingrese fecha
                    </div>
                </div>
                <div class="col-4">
                    <label for="inputDateE" class="form-label">Fecha de ejecución</label>
                    <input id="inputDateE" class="form-control" type="date" required>
                    <div class="invalid-feedback">
                        Ingrese fecha
                    </div>

                </div>
                <div class="col-12">
                    <label for="inputDetails" class="form-label">Detalles del reporte</label>
                    <textarea class="form-control" id="details" rows="2" placeholder="Ingrese detalles del reporte" required></textarea>
                    <div class="invalid-feedback">
                        Ingrese detalles del reporte
                    </div>
                </div>
                <div class="col-12">
                    <label for="inputWork" class="form-label">Trabajo ejecutado</label>
                    <textarea class="form-control" id="Work" rows="2" placeholder="Ingrese el trabajo ejecutado" required></textarea>
                    <div class="invalid-feedback">
                        Ingrese el trabajo ejecutado
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                    <button id="btn-search" type="submit" class="btn btn-primary">Actualizar</button>
                </div>
            </form>
        </div>
    </div>
</div>
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModal" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">¿Está seguro de eliminar a este registro?</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                El registro de la avería será borrado permanentemente del sistema.
            </div>
            <div class="modal-footer">
                <form method="POST" asp-controller="Fault" asp-action="Delete">
                    <button type="button" class="btn btn-primary">Eliminar</button>
                </form>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>

            </div>
        </div>
    </div>
</div>

@section scripts
{
    <partial name="_ValidationScriptsPartial" />
    <script type="text/javascript">

        $(document).ready(function () {
            if ('@ViewBag.ShowModalResponse' === 'True') {
               createModalResponse("@ViewBag.mensaje");
            }
           });
    </script>
}