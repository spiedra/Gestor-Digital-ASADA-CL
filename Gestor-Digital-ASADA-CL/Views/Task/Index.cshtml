                @if (ViewBag.Users != null)
                {
                    @foreach (User u in ViewBag.Users)
                    {
                        <li class="nav-item">
                            <form>
                                <input type="hidden" name="UserId" value="@u.IdUsuario">
                                <button class="nav-link nav-link--task noHover" type="submit">@u.Nombre @u.Apellidos</button>
                            </form>
                        </li>
                    }
                }
            </ul>
        </nav>
