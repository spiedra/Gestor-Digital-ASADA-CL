@model TaskViewModel
@{
    ViewData["Titulo"] = "Gestor de tareas";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Gestor de tareas</h1>
<hr />
<div class="row g-3">
    <div class="col-md-3 mb-3">
        <nav class="card py-2 shadow">
            <div class="container-fluid">
                <form class="d-flex">
                    <input class="form-control me-2" type="search" placeholder="Usuario" aria-label="Search">
                    <button class="btn btn__search"
                            title="Busqueda de usuarios">
                        <img src="~/assets/search_black_24dp.svg" alt="Icono de busqueda" />
                    </button>
                </form>
            </div>
            <ul class="nav flex-column text-start">
                @if (ViewBag.Users != null)
                {
                    @foreach (User u in ViewBag.Users)
                    {
                        <li class="nav-item">
                            <button class="nav-link nav-link--task noHover"
                                    onclick="getTasksByUserId(this); return false;"
                                    name="@u.Nombre @u.Apellidos" value=@u.IdUsuario>
                                @u.Nombre @u.Apellidos
                            </button>
                        </li>
                    }
                }
            </ul>
        </nav>
    </div>
    <div class="col-md-9">
        <div>
            <h3 id="tagUserFullName" class="promo-table__title d-inline me-3">Usuario:</h3>
            <button id="btn__refresh--user" class="btn mb-3 d-inline btn__add"
                    data-bs-toggle="modal"
                    data-bs-target="#addModal"
                    data-bs-placement="right"
                    title="Agregar tarea">
                <img src="~/assets/add_black_24dp.svg" alt="Icono de agregar" />
            </button>
            <button id="btn__search--user" class="btn mb-3 d-inline btn__search"
                    data-bs-toggle="modal"
                    data-bs-target="#searchModal"
                    data-bs-placement="right"
                    title="Busqueda de usuarios">
                <img src="~/assets/search_black_24dp.svg" alt="Icono de busqueda" />
            </button>
            <button id="btn__refresh--user" class="btn mb-3 d-inline btn__refresh"
                    title="Refrescar tabla">
                <img src="~/assets/refresh_black_24dp.svg" alt="Icono de busqueda" />
            </button>
        </div>
        <div class="row table-responsive">
            <div class="col-12">
                <table class="table table-bordered table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Titulo</th>
                            <th scope="col">Detalles</th>
                            <th scope="col">Acción</th>
                        </tr>
                    </thead>
                    <tbody id="tbodyTask"></tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="addModal" tabindex="-1" aria-labelledby="addModal" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Agregar tarea</h5>
            </div>
            <form id="formAddTask" class="was-validated">
                <div class="modal-body">
                    <div class="container">
                        <div class="mb-3">
                            <label for="inputTitle" class="form-label">Título</label>
                            <input id="inputTitle" class="form-control is-invalid" type="text" placeholder="Ingrese el título de la tarea" asp-for="Titulo" required>
                            <span class="field-validation-error" asp-validation-for="Titulo"></span>
                        </div>
                        <div class="mb-3">
                            <label for="inputDetail" class="form-label">Detalle</label>
                            <input id="inputDetail" class="form-control is-invalid" type="text" placeholder="Ingrese el detalle de la tarea" asp-for="Detalles" required>
                            <span class="field-validation-error" asp-validation-for="Detalles"></span>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button id="btn-search" type="button" class="btn btn-primary" onclick="addTask(); return false;">Agregar</button>
                </div>
            </form>
        </div>
    </div>
</div>
<div class="modal fade" id="searchModal" tabindex="-1" aria-labelledby="searchModal" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Busqueda de tareas</h5>
            </div>
            <form class="was-validated" method="post" asp-controller="Task" asp-action="Detail">
                <div class="modal-body">
                    <div class="container">
                        <div class="mb-3">
                            <label for="inputName" class="form-label">Título de tarea</label>
                            <input id="inputName" class="form-control is-invalid" type="text" placeholder="Ingrese el título de la tarea" asp-for="Titulo" required>
                            <span class="field-validation-error" asp-validation-for="Titulo"></span>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button id="btn-search" type="submit" class="btn btn-primary">Buscar</button>
                </div>
            </form>
        </div>
    </div>
</div>
<div class="modal fade" id="editModal" tabindex="-1" aria-labelledby="editModal" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Modificar información de tarea</h5>
            </div>
            <form id="formEditTask" class="was-validated">
                <div class="modal-body">
                    <div class="container">
                        <div class="mb-3">
                            <label for="inputTitleEdit" class="form-label">Título</label>
                            <input id="inputTitleEdit" class="form-control is-invalid" type="text" placeholder="Ingrese el título de la tarea" asp-for="Titulo" required>
                            <span class="field-validation-error" asp-validation-for="Titulo"></span>
                        </div>
                        <div class="mb-3">
                            <label for="inputDetailEdit" class="form-label">Detalle</label>
                            <input id="inputDetailEdit" class="form-control is-invalid" type="text" placeholder="Ingrese el detalle de la tarea" asp-for="Detalles" required>
                            <span class="field-validation-error" asp-validation-for="Detalles"></span>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button id="btn-search" type="button" class="btn btn-primary" onclick="updateTaskInformation(); return false;">Actualizar</button>
                </div>
            </form>
        </div>
    </div>
</div>
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModal" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">¿Está seguro de eliminar esta tarea?</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                La tarea va a ser borrada permanentemente del sistema
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-primary" onclick="deleteTask(); return false;">Confirmar eliminación</button>
            </div>
        </div>
    </div>
</div>

<div class="position-fixed bottom-0 end-0 p-3" style="z-index: 11">
    <div id="liveToast" class="toast hide" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="toast-header">
            <strong class="me-auto">Mensaje</strong>
            <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
        <div class="toast-body">
            Usuario sin tareas actualmente.
        </div>
    </div>
</div>

@section scripts
{
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/task.js" asp-append-version="true"></script>
    <script type="text/javascript">
            $(document).ready(function () {
            if ('@ViewBag.ShowModalResponse' === 'True') {
                createModalResponse2("@ViewBag.Message");
            }
           });
    </script>
}