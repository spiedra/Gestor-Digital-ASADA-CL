@{
    ViewData["Title"] = "Gestor de sectores";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="mt-4 mb-2">
    <h1 class="promo-table__title d-inline me-3">Gestor de sectores</h1>
    <button id="btn__insert--user" class="btn btn-dark mb-3 d-inline btn__search"
            data-bs-toggle="modal"
            data-bs-target="#insertModal"
            data-bs-placement="right"
            title="Registro de averías">
        <img src="~/assets/add_black_24dp.svg" alt="Icono de insertar" />
    </button>
    <button id="btn__search--user" class="btn btn-dark mb-3 d-inline btn__search"
            data-bs-toggle="modal"
            data-bs-target="#searchModal"
            data-bs-placement="right"
            title="Búsqueda de averías">
        <img src="~/assets/search_black_24dp.svg" alt="Icono de busqueda" />
    </button>
    <button id="btn__refresh--user" class="btn btn-dark mb-3 d-inline btn__search"
            title="Refrescar tabla">
        <img src="~/assets/refresh_black_24dp.svg" alt="Icono de busqueda" />
    </button>
</div>
<hr />
